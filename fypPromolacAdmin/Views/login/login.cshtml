@model fypPromolacAdmin.Models.adminModel

@{
    ViewBag.Title = "login";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal" style="margin-left:20%;margin-right:10%;">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-6">

                <img src="~/Content/images/logo.png" style="width:100%;" />
            </div>
            <div class="col-md-3"></div>
        </div>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
            <p style="font-weight:bold;">Admin Panel</p>
            </div>
            <div class="col-md-4"></div>
        </div>

        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-3"></div>


            <div class="col-md-4">
                @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @placeholder = "username" } })
                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3"></div>
            <div class="col-md-4">
                @Html.PasswordFor(model => model.password_, new { @placeholder = "password", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.password_, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-4"></div>
            <div class="col-md-6">
                <input type="submit" value="Login" class="btn btn-info btn-primary btn-md" />
            </div>
            <div class="col-md-1"></div>
        </div>
    </div>}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
