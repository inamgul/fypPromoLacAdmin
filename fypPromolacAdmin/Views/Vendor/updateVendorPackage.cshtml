@model fypPromolacAdmin.Models.vendorViewModel

@{
    ViewBag.Title = "addCompleteVendorInfo";
}

<h2>addCompleteVendorInfo</h2>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/bootstrap.js"></script>

@using (Html.BeginForm("updateVendorPackage", "vendor", FormMethod.Post))
{

    foreach (var item in Model.package_details)
    {
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-4">
                <h1>Package #@item.packagesId</h1>
                <br />
                <span>Package Name:</span> @item.packageName
                <br />
                <span>Messages Allowed:</span> @item.messagesAllowed
                <br />
                <span>Duration</span> @item.packageDurationDays
                <br />
                <span>SubUsers Allowed</span> @item.subUsersAllowed
                <br />
                <span>Description:</span> @item.packageDescription
                <br /><br />
                <button onclick="return packageValue(@item.packagesId)">Select</button>

            </div>
            <div class="col-lg-4"></div>
        </div>
    }

    @Html.HiddenFor(model => model.vendorId)
    @Html.HiddenFor(model => model.vendorPackageTaken)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button onclick="return check()" type="submit"class="btn btn-default">Submit</button>
        </div>
    </div>
}

<script type="text/javascript">
    function packageValue(x) {
        document.getElementById('vendorPackageTaken').value = x
        return false;
    }
    function check() {

        var x = document.getElementById('vendorPackageTaken').value;
        if (x == 0) {
            alert("select any deal please");
            return false;
        }
        else {
            return true;
        }
    }
</script>
